[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = systemd
Target = grub
Target = linux-firmware

[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = boot/vmlinuz-*
Target = usr/lib/modules/*/vmlinuz
Target = usr/lib/initcpio/*

[Action]
Description = Post-Transaction /efi backup...
When = PostTransaction
Exec = /usr/bin/bash -c '/usr/bin/rsync -arq --mkpath --delete /efi/ /.bootbackup/efi'
Depends = rsync
