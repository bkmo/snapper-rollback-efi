[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = systemd
Target = grub
Target = linux-firmware

[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Operation = Remove
Target = usr/lib/modules/*/vmlinuz

[Action]
Description = Post-Transaction /efi backup...
When = PostTransaction
Exec = /usr/bin/bash -c '/usr/bin/rsync -a --mkpath --delete /efi/ /.bootbackup/efi/'
Depends = rsync
